# Mailchimp Configuration
MAILCHIMP_API_KEY=your-mailchimp-api-key-here
MAILCHIMP_SERVER_PREFIX=us1  # Check your API key, it ends with -us1, -us2, etc.
MAILCHIMP_LIST_ID=your-list-id-here
MAILCHIMP_CAMPAIGN_ID=your-campaign-id-here
MAILCHIMP_USER_ID=your-user-id-here

# SMTP Configuration (for direct sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email Settings
FROM_NAME=HackTheEast 2025
FROM_EMAIL=noreply@hacktheeast.com
REPLY_TO_EMAIL=hello@hacktheeast.com

# Test Configuration
TEST_EMAIL_ADDRESSES=test1@example.com,test2@example.com

# Campaign URLs
REGISTRATION_URL=https://hacktheeast2025.com/register

# Analytics (Optional)
GOOGLE_ANALYTICS_CAMPAIGN=hacktheeast2025_launch